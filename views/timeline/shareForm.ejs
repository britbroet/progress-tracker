<h1>Share <%= timeline.title %> with viewers</h1>
			<a href="/<%= timeline.id %>/shareTxt" class="btn btn-warning glyphicon glyphicon-envelope"></a>


	<div class="shareContainer">
		<div class="row">

			<div class="col-xs-12">
				<h1><%= timeline.title %></h1>
			</div>
			<div class="col-xs-12">
				<h4><%= timeline.description %></h4>
			</div>


		</div>

		<hr>

		<div>

			<% timeline.steps.forEach(function(step){ %>

				<div class="shareStepRow">
					<div class="stepShareIconContainer">
						<h3><%= step.stepname %></h3>
						<%= step.stepdesc %> 
					</div>

					<div class="stepShareIconContainer">	
						<div id="<%= step.id %>" class="stepui <%= step.status %>"></div>
					</div>
				</div>

			<%	});	%>
		</div>
	</div>