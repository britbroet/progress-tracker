<h3 class="page-title">Edit info for <span style="font-weight: 500;"><%= timeline.title %></span></h3>

<div style="background-color: #fff; padding: 30px;">
	<form action="/timeline/<%= timeline.id %>/editinfo" class="edit-form-info" role="form">
	  <div class="form-group">
	    <label for="title" class="form-label">Timeline Title</label>
	    <input type="text" class="form-control" id="title" placeholder="Timeline title" name="title" value="<%= timeline.title %>">
	  </div>
	  <div class="form-group">
	    <label for="description" class="form-label">Timeline Description</label>
	    <input type="text" class="form-control" id="description" placeholder="Description of timeline" name="description" value="<%= timeline.description %>">
	  </div>

	  <button type="submit" class="btn btn-info">Save</button>
	  <a href="/timeline/<%= timeline.id %>" class="btn btn-warning">Cancel</a>
	</form>
</div>